= form_for @hint, :html => { :class => "form-horizontal" } do |f|
  .control-group
    = f.label :hint_text, :class => 'control-label'
    .controls
      = f.cktext_area :hint_text, :id => "sometext", :cols => 40, :ckeditor => {:uiColor => "#AADC6E", :toolbar => "full"}
  .control-group
    = f.label :queue_number, :class => 'control-label'
    .controls
      = f.text_field :queue_number, :class => 'text_field'
  .controls
    = f.hidden_field :task, value: @task
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), hints_path, :class => 'btn'
